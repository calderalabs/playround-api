<div id="arena">
  <h1>
    <%= @arena.name %> - <%= @arena.address %> <% if can? :update, @arena %>
      | <%= link_to t('views.buttons.edit'), edit_arena_path(@arena) %>
    <% end %>
    <% if can? :destroy, @arena %>
      | <%= link_to t('views.buttons.delete'), arena_path(@arena), :method => 'delete', :confirm => t('views.arenas.show.confirmations.delete') %>
    <% end %>
  </h1>

  <div class="left-column">
    <%= image_tag @arena.image.url(:medium) %>
  </div>

  <p>
    <%= @arena.description %>
  </p>
  
</div>

