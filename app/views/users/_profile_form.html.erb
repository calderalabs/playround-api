<%= simple_form_for @user, :as => :user, :url => user_path, :html => { :multipart => true } do |f| %>
  <%= f.input :display_name %>
  <%= f.input :real_name %>
  <%= f.input :email %> <%= f.input :show_email, :as => :boolean %>
  <%= f.input :password, :input_html => { :autocomplete => 'off' } %>
  <%= f.input :avatar %>
  <%= f.button :submit, :label => t('views.users.profile.buttons.update') %>
<% end %>