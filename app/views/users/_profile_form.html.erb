<%= semantic_form_for @user, :as => :user, :url => user_path, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
  <%= f.input :display_name %>
  <%= f.input :real_name %>
  <%= f.input :email %>
  <%= f.input :password, :input_html => { :autocomplete => 'off' } %>
  <%= f.input :avatar %>
  <% end %>
  <%= f.buttons %>
<% end %>