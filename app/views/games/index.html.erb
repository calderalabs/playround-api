<div id="title">
  <h1><%= t('views.games.index.title')%></h1>
  <%= link_to(t('views.games.index.create_new'), new_game_path) %>
</div>

<ul id="games">
<% @games.each do |game| %>
<li>
  <a href="<%= game_path(game) %>">
    <div class="image"><%= image_tag game.image.url(:thumb) %></div>
    <div class="game-details"><%= game.name %></div>
  </a>
</li>
<% end%>
</ul>