    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :max_people %><br />
    <%= f.text_field :max_people %>
  </div>
  <div class="field">
    <%= f.label :min_people %><br />
    <%= f.text_field :min_people %>
  </div>
  <div class="field">
    <%= f.label :arena_id %><br />
    <%= f.collection_select :arena_id, Arena.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :game_id %><br />
