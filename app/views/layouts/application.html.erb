<!DOCTYPE html>
<html>
<head>
  <title>Playround</title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag :flutie, 'playround', :cache => true %>
</head>
<body>
  <div class="content">
    <div id="header">
      <% if signed_in? -%>
        <%= link_to "Sign out", sign_out_path, :method => :delete %>
      <% else -%>
        <%= link_to "Sign in", sign_in_path %>
      <% end -%>
    </div>
    <div id="flash">
      <% flash.each do |key, value| -%>
        <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>
